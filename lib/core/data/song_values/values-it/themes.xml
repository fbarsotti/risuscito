    <style name="AppBase.Risuscito.Theme" parent="AppTheme" />

    <style name="Base.Risuscito.Theme" parent="AppBase.Risuscito.Theme">
        <item name="android:windowActivityTransitions">true</item>

        <item name="risuscito_regular_font">@font/googlesans_regular</item>
        <item name="risuscito_medium_font">@font/googlesans_medium</item>

        <item name="android:textViewStyle">@style/Widget.Risuscito.TextView</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

        <item name="tabStyle">@style/Widget.Risuscito.TabLayout</item>

        <item name="actionModeCloseDrawable">@drawable/close_24px</item>
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.Risuscito.DisplayLarge</item>
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.Risuscito.DisplayMedium
        </item>
        <item name="textAppearanceDisplaySmall">@style/TextAppearance.Risuscito.DisplaySmall</item>
